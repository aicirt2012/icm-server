				{
					"listen": "test",
					"script": {
						"id": "927159e0-c7b7-4294-a350-df2906fbfe82",
						"type": "text/javascript",
						"exec": [
							"pm.test(\"Extract token from response\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.environment.set(\"token\", jsonData.token);",
							"});",
							""
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
